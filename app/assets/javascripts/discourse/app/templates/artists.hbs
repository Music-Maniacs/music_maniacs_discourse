{{outlet}}
<div id="entity-page" class="artist-page" role="main">
  <div class="entity-page-header flex">
    <div class="cover-art" title="Album art for {{this.model.artist.name}}">
      {{html-safe this.model.coverArt}}
    </div>
    <div class="artist-info">
      <h1>{{this.model.artist.name}}</h1>
      <div class="details">
        <small class="help-block">
          {{this.model.artist.begin_year}}
          {{#if this.model.artist.end_year}} — {{this.model.artist.end_year}}{{/if}}
          <br>
          {{this.model.artist.area}}
        </small>
      </div>
      {{log this.wikipediaData}}
      {{#if this.wikipediaData}}
        <div class="wikipedia-extract">
          <div class="content">{{html-safe this.wikipediaData.content}}</div>
          <a class="btn btn-link pull-right" href="{{this.wikipediaData.url}}" target="_blank" rel="noopener noreferrer">
            Read on Wikipedia…
          </a>
        </div>
      {{/if}}
    </div>
  </div>
</div>
{{log this.model.artist}}
<div class="right-side">
  <div class="entity-rels">
    {{#if this.model.artist.rels}}
      <h1>Links</h1>
      {{#each-in this.model.artist.rels as |key value|}}
        <p>{{key}} : {{value}}</p>
      {{/each-in}}
    {{/if}}
    <OpenInMusicBrainzButton
      @entityType="artist"
      @entityMBID={{this.model.artist.mbid}}
    />
  </div>
  <div class="artist-genres tags">
    <h2>Genres</h2>
    {{#if this.formattedTags}}
      <ul>
        {{#each this.formattedTags as |tag|}}
          <li>
            {{tag.label}}
            <span class="genre-count">({{tag.count}} {{if (eq tag.count 1) "vote" "votes"}})</span>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No genres available for this artist.</p>
    {{/if}}
  </div>
</div>